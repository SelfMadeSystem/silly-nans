---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="max-w-6xl mx-auto">
      <section class="p-8">
        <h1 class="mx-auto w-fit text-center">Welcome to Shoghi Simon's Silly Shenanigans</h1>
        <div class="mx-auto w-fit">Here you'll find a collection of fancy effects and animations I've created over the years. Enjoy!</div>
      </section>
    </main>
    <Footer />
  </body>
</html>
